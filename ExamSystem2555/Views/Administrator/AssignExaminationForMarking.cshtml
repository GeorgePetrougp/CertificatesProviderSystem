@model WebApp.DTO_Models.Final.AssignExamForMarkingView

<h1>Assign Exam @Model.CandidateExaminationId to a Marker</h1>

<form asp-action="AssignExaminationForMarking">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CandidateExaminationId"/>

    <div class="form-group form-label mt-4 fw-bold">
        <label class="form-label mt-4" asp-for="SelectedMarkerId">Add Role</label>
        <select class="form-select w-25" asp-for="SelectedMarkerId" asp-items="@Model.Markers"></select>
        <span asp-validation-for="SelectedMarkerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary"/>
    </div>

</form>

<div>
    <a asp-action="CandidateExaminationsPendingForMarkingIndex">Back to List</a>
</div>
