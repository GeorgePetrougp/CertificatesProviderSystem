@using Microsoft.AspNetCore.Identity
@using WebApp.Models;
@model IEnumerable<ApplicationUser>


@{

    ViewData["Title"] = "Application Roles";

}

<h1>User Roles Manager</h1>
<br />


<table class="table table-hover width=80% table-light" style="text-align: center">
    <thead class="table-primary">
        <tr>

            <th>@Html.DisplayNameFor(model=>model.LastName)</th>

            <th>@Html.DisplayNameFor(model=>model.FirstName)</th>

            <th>@Html.DisplayNameFor(model=>model.Email)</th>

            <th>Edit Role</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem=>item.LastName)</td>
                <td>@Html.DisplayFor(modelItem=>item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem=>item.Email)</td>
                <td>
                    <a class="btn btn-outline-success" asp-action="AdministratorCreateCandidate" asp-controller="Candidates" asp-route-userId="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

