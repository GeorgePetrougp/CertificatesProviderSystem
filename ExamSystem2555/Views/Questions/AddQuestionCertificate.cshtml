@model WebApp.DTO_Models.EditQuestionCertificateView



<h2>Add Certificates</h2>

<form asp-action="AddQuestionCertificate">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="QuestionId" />
<div class="form-group form-label mt-4" id="topicSelect">
        <label asp-for="SelectedCertificateIds"></label>
        <select asp-for="SelectedCertificateIds" asp-items="Model.CertificatesList"></select>
        <span asp-validation-for="SelectedCertificateIds" class="text-danger"></span>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
</div>
</form>
