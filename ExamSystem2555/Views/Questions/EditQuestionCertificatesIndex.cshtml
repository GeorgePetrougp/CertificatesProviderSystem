@model WebApp.DTO_Models.EditQuestionCertificateView

@{
    ViewData["Title"] = "Index";
}

<h1>Edit Certificates</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="QuestionId" />

<p>
    <a class="btn btn-primary btn-lg" asp-action="AddQuestionCertificate" asp-route-id="@Model.QuestionId">Add Certificate</a>
</p>
<table class="table table-hover table-light">
    <thead class="table-primary">
        <tr>
            <th>Certificate</th>
            <th>Description</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Certificates)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.CertificateId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
