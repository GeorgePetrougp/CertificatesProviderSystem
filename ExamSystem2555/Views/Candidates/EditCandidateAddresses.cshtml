@model WebApp.DTO_Models.Candidates.AddressDTO

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="EditCandidateAddresses">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AddressId" />
            <div class="form-group">
                <label asp-for="AddressLine" class="control-label fw-bold"></label>
                <input asp-for="AddressLine" class="form-control">
                <span asp-validation-for="AddressLine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label fw-bold"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Province" class="control-label fw-bold"></label>
                <input asp-for="Province" class="form-control">
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label fw-bold"></label>
                <input asp-for="City" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostalCode" class="control-label fw-bold"></label>
                <input asp-for="PostalCode" class="form-control">
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>