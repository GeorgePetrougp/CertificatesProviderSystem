@model WebApp.DTO_Models.Final.ExaminationQuestionView

<body>

    <h1 style="margin:0 auto;width:50%">ExamSystem</h1>


    <h2>@Model.Questions[Model.CurrentIndex].QuestionDisplay</h2>
    <form method="post">
        <input type="hidden" name="CurrentIndex" value="@Model.CurrentIndex" />
        <input type="hidden" name="Questions" value="@Model.Questions[Model.CurrentIndex]">
        <div class="form-group">
            @foreach (var answer in Model.Questions[Model.CurrentIndex].PossibleAnswers)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="SelectedAnswerId" value="@answer.QuestionPossibleAnswerId" @(answer.IsAnswerCorrect ? "checked" : "") />
                    <label class="form-check-label">@answer.QuestionPossibleAnswer</label>
                </div>
            }
        </div>
        <button type="submit" name="action" value="Next">Next</button>
    </form>


   
    <button id="previous">Previous</button>
    <button id="next">Next</button>

</body>


@*<script src="~/js/exams.js"></script>*@
<script>
    var questions = @Html.Raw(Json.Serialize(Model.Questions));
</script>







