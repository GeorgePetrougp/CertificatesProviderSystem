@using WebApp.Models;
@inject SignInManager<ApplicationUser> signInManager;

@model IEnumerable<WebApp.DTO_Models.Certificates.CertificateDTO>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<h1>Index</h1>

@if (User.IsInRole("Administrator"))
{
    
<p>
    <a asp-action="CreateCertificate">Create Certificate</a>
</p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassMark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassMark)
            </td>
            <td>
                <a asp-action="CertificateDetails" asp-route-id="@item.CertificateId">Details</a>
                    
                        <a asp-action="CandidateRegistration" asp-controller="Users" asp-route-id="@item.CertificateId">Buy</a>
                        
                    
                    @if(User.IsInRole("Administrator")){

                
                <a asp-action="EditCertificate" asp-route-id="@item.CertificateId">Edit</a> 
                <a asp-action="DeleteCertificate" asp-route-id="@item.CertificateId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>

<div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
    @foreach (var item in Model) {
    <div class="feature col m-1" style="border: 1px solid black">
        <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                    <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                </svg>
        </div>
            <h3 class="fs-2">@Html.DisplayFor(modelItem => item.FullTitle)</h3>
            <p>@Html.DisplayFor(modelItem => item.Description)</p>
            <p>@Html.DisplayFor(modelItem => item.Status)</p>
            <p>@Html.DisplayFor(modelItem => item.PassMark)</p>
            
            <a asp-action="CandidateRegistration" asp-controller="Users" asp-route-id="@item.CertificateId" class="icon-link d-inline-flex align-items-center">
                Buy Certificate
                <svg class="bi" width="1em" height="1em"><use xlink:href="#chevron-right"></use></svg>
            </a>            
    </div>    
    }
</div>
