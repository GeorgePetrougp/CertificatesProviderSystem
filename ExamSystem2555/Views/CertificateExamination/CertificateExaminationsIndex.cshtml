                    <a class="btn btn-link" asp-action="EditQuestionCertificatesIndex" asp-route-id="@item.QuestionId">Edit Certificate</a>
                </td>*@
                <td>
                    <a class="btn btn-outline-info" asp-action="CertificateExaminationDetails" asp-route-id="@item.ExaminationId">Details</a>&nbsp;

                    <a class="btn btn-outline-success" asp-action="UpdateCertificateExamination" asp-route-id="@item.ExaminationId">Edit</a>&nbsp;

                    <a class="btn btn-outline-danger" asp-action="ConfirmDisableCertificateExamination" asp-route-id="@item.ExaminationId">Delete</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>

